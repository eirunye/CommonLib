<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:eirunye="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_show_params"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Hello World!"
        android:visibility="gone"
        android:textSize="@dimen/sp_25"/>

    <com.eirunye.common.lib.view.MyView
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        eirunye:Text="你好，哈哈哈！"
        eirunye:TextColor="#ff0"
        android:background="#ccc"
        />

    <!--若该按钮在设备上能铺满屏幕宽度，说明能适配改设备-->
    <Button
        android:layout_width="@dimen/dp_360"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:onClick="getScreenParams"
        android:text="测试此按钮的适配"
        android:textSize="@dimen/sp_18"/>
</RelativeLayout>